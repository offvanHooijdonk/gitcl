<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppBaseTheme.Preferences" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppBaseTheme.ToolbarTextExpanded" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/toolbar_text</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppBaseTheme.ToolbarTextCollapsed" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/toolbar_text</item>
    </style>

    <!--<style name="ToolBarStyle" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/primary_text_light</item>
        <item name="android:textColorSecondary">@android:color/primary_text_light</item>
        <item name="actionMenuTextColor">@android:color/primary_text_light</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
    </style>-->

    <style name="MaterialButton">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/btn_material_text</item>
    </style>

    <style name="BadgeAligned">
        <item name="android:layout_marginStart">@dimen/badge_align_margin</item>
        <item name="android:layout_marginEnd">@dimen/badge_align_margin</item>
    </style>

    <style name="BranchLabel">
        <item name="android:paddingStart">@dimen/branch_label_padding_horiz</item>
        <item name="android:paddingEnd">@dimen/branch_label_padding_horiz</item>
        <item name="android:paddingTop">@dimen/branch_label_padding_top</item>
        <item name="android:paddingBottom">@dimen/branch_label_padding_bottom</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:backgroundTint">@color/md_deep_purple_A200</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

</resources>
