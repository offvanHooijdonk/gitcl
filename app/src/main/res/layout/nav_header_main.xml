<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/layoutHeader"
        android:layout_alignEnd="@+id/layoutHeader"
        android:layout_alignStart="@+id/layoutHeader"
        android:layout_alignTop="@+id/layoutHeader"
        android:scaleType="centerCrop"
        android:src="@drawable/drawer_bkgr_image_fade_light"/>

    <LinearLayout
        android:id="@id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/nav_header_top_padding">

        <ImageView
            android:id="@+id/imgAccountAvatar"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:padding="0dp"
            android:src="@drawable/ic_account_default_72"
            android:tint="@android:color/white"/>

        <TextView
            android:id="@+id/txtDrawerAccountUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/nav_header_vertical_spacing"
            android:text="@string/drawer_username_anonymous"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

        <TextView
            android:id="@+id/txtDrawerAccountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="noname"/>
    </LinearLayout>


</RelativeLayout>
