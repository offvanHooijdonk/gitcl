<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/itemRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackgroundBorderless"
    android:clickable="true"
    android:focusable="true"
    android:paddingBottom="@dimen/list_item_padding_vert"
    android:paddingEnd="@dimen/list_item_padding_hor"
    android:paddingStart="@dimen/list_item_padding_hor"
    android:paddingTop="@dimen/list_item_padding_vert">

    <ImageView
        android:id="@+id/imgLogoCircle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/list_item_padding_hor"
        android:src="@drawable/circle"
        android:tint="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/imgForkLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imgLogoCircle"
        android:layout_alignEnd="@id/imgLogoCircle"
        android:layout_alignStart="@id/imgLogoCircle"
        android:layout_alignTop="@id/imgLogoCircle"
        android:padding="4dp"
        android:scaleType="center"
        android:src="@drawable/ic_fork_32"
        android:tint="@color/md_white_1000"/>

    <ImageView
        android:id="@+id/imgRepoLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imgLogoCircle"
        android:layout_alignEnd="@id/imgLogoCircle"
        android:layout_alignStart="@id/imgLogoCircle"
        android:layout_alignTop="@id/imgLogoCircle"
        android:padding="4dp"
        android:scaleType="center"
        android:src="@drawable/ic_repo_32"
        android:tint="@color/md_white_1000"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txtRepoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imgLogoCircle"
        android:layout_toEndOf="@id/imgLogoCircle"
        android:layout_toStartOf="@+id/blockStar"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Repo name and so goes it further"
        android:textColor="@android:color/primary_text_light"
        android:textSize="@dimen/list_item_primary"/>

    <TextView
        android:id="@+id/txtOwnerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imgLogoCircle"
        android:layout_alignEnd="@id/txtRepoName"
        android:layout_alignStart="@id/txtRepoName"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Ownerwith a long long name letsssss"
        android:textColor="@color/md_blue_grey_700"/>

    <TextView
        android:id="@+id/txtLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/txtOwnerName"
        android:layout_below="@id/txtOwnerName"
        android:layout_marginTop="6dp"
        android:text="Language"
        android:textColor="@color/md_blue_grey_700"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/imgForksCount"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignTop="@id/txtLanguage"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/txtLanguage"
        android:src="@drawable/ic_fork_32"/>

    <TextView
        android:id="@+id/txtForksCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/txtLanguage"
        android:layout_marginStart="2dp"
        android:layout_toEndOf="@id/imgForksCount"
        android:text="2,4k"
        android:textColor="@color/md_blue_grey_700"
        android:textSize="12sp"/>

    <LinearLayout
        android:id="@+id/blockWatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/txtOwnerName"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgWatch"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_watch_24"
            android:tint="@color/md_grey_700"/>

        <TextView
            android:id="@+id/txtWatchCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="120k"
            android:textColor="@color/md_grey_700"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/blockStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/txtOwnerName"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_toStartOf="@id/blockWatch"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgStar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_star_24dp"
            android:tint="@color/md_grey_700"/>

        <TextView
            android:id="@+id/txtStarsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="23"
            android:textColor="@color/md_grey_700"
            android:textSize="12sp"/>
    </LinearLayout>

</RelativeLayout>