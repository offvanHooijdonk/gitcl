<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.epam.traing.gitcl.presentation.ui.view.RepoIconView
            android:id="@+id/repoIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/list_item_padding_hor"
            app:iconSize="@dimen/repo_info_icon"
            app:isOwn="true"
            app:privateIconSize="@dimen/repo_info_private"/>

        <TextView
            android:id="@+id/txtRepoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/repoIcon"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Repository"
            android:transitionName="@string/transit_repo_name"
            android:textSize="18sp"/>
    </RelativeLayout>

</RelativeLayout>