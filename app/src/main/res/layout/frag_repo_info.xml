<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgLogoCircle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/list_item_padding_hor"
            android:src="@drawable/circle"
            android:tint="@color/repo_own"/>

        <ImageView
            android:id="@+id/imgForkLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imgLogoCircle"
            android:layout_alignEnd="@id/imgLogoCircle"
            android:layout_alignStart="@id/imgLogoCircle"
            android:layout_alignTop="@id/imgLogoCircle"
            android:padding="4dp"
            android:scaleType="center"
            android:src="@drawable/ic_fork_32"
            android:tint="@color/md_white_1000"/>

        <ImageView
            android:id="@+id/imgRepoLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imgLogoCircle"
            android:layout_alignEnd="@id/imgLogoCircle"
            android:layout_alignStart="@id/imgLogoCircle"
            android:layout_alignTop="@id/imgLogoCircle"
            android:padding="4dp"
            android:scaleType="center"
            android:src="@drawable/ic_repo_32"
            android:tint="@color/md_white_1000"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txtRepoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgLogoCircle"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:transitionName="@string/transit_repo_name"
            android:text="Repository"
            android:textSize="18sp"/>
    </RelativeLayout>

</RelativeLayout>